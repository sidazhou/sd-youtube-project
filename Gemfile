# A sample Gemfile
source "https://rubygems.org"

gem 'rake'
gem 'activesupport'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'

gem 'puma'
gem 'tux'

gem 'google-api-client'
gem 'json'
gem 'trollop'

group :development, :test do
  gem 'pry'
  gem 'pry-byebug'
  gem 'shotgun'
  gem 'sqlite3'
end


group :production do
  gem 'pg'
end
